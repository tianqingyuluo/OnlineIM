<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="icu.tianqingyuluo.onlineim.mapper.UserBriefResponseMapper">
    <resultMap id="UserBriefResponseMap" type="com.example.UserBriefResponse">
        <id property="id" column="userID"/>
        <result property="nickname" column="nickname"/>
        <result property="avatar" column="avatarUrl"/>
    </resultMap>
    <!-- 根据id查询用户简要信息 -->
    <select id="searchUsersByUserID" resultMap="UserBriefResponseMap">
        SELECT
            id,nickname,avatar
        FROM users
        WHERE (id LIKE CONCAT('%', #{UserID}, '%'))
        ORDER BY created_at DESC
            LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 根据username查询用户简要信息 -->
    <select id="searchUsersByUsername" resultMap="UserBriefResponseMap">
        SELECT
            id,nickname,avatar
        FROM users
        WHERE (username LIKE CONCAT('%', #{Username}, '%'))
        ORDER BY created_at DESC
            LIMIT #{limit} OFFSET #{offset}
    </select>
</mapper>