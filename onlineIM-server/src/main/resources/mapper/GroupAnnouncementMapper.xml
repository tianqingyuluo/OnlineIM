<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="icu.tianqingyuluo.onlineim.mapper.GroupAnnouncementMapper">
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="icu.tianqingyuluo.onlineim.pojo.entity.GroupAnnouncement">
        <id property="groupAnnouncementId" column="group_announcement_id" />
        <result property="gid" column="gid" />
        <result property="userid" column="userid" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="isPinned" column="is_pinned" />
        <result property="status" column="status" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>
    
    <!-- 复杂查询公告与发布者信息示例 -->
    <select id="getAnnouncementsWithPublisherInfo" resultType="java.util.Map">
        SELECT ga.*, u.username, u.nickname, u.avatarurl 
        FROM group_announcement ga
        JOIN user u ON ga.userid = u.userid
        WHERE ga.gid = #{gid} AND ga.status = 1
        ORDER BY ga.is_pinned DESC, ga.create_time DESC
    </select>
    
    <!-- 使用动态SQL条件查询公告 -->
    <select id="getAnnouncementsWithCondition" resultMap="BaseResultMap">
        SELECT * FROM group_announcement 
        <where>
            <if test="gid != null">
                AND gid = #{gid}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="isPinned != null">
                AND is_pinned = #{isPinned}
            </if>
            <if test="beginTime != null">
                AND create_time &gt;= #{beginTime}
            </if>
            <if test="endTime != null">
                AND create_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY is_pinned DESC, create_time DESC
    </select>
</mapper>